@model TAKOMEX.Models.ModelRegistro

@{
    Layout = null;
}

@{
    if (Request.Cookies["Cookie"] != null)
    {
        Response.Redirect("Index");
    }
}

<!doctype html>
<html lang="es">

<head>
    <!-- No Tocar Nada de esto Porfa es el bootstrap-->
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- Este es el css que se puede editar-->
    <link rel="stylesheet" href="css/estilos.css">
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/registro.css">
    <script src="https://kit.fontawesome.com/8aed773e18.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
    <script src="~/Content/javascript/registro.js" charset="utf-8"></script>


    <title> Restaurante TAKOMEXS</title>
</head>
<body class="text-center">
    <div class="home">
        <img src="~/Content/imagenes/TAKOMEX (nav-bar).png" alt="" id="logo" onclick="location.href='indexprincipal.html';" value="Go to Home">
    </div>
    @if(ViewBag.Menssaje != null)
    {
        <p>@ViewBag.Menssaje</p>
    }
    <div class="box-1">
        <div class="box-2">
            <form class="form-signin" id="form-registro" action="RegistroA" method="post">
                <h1 class="h3 mb-3 font-weight-normal">Crear cuenta</h1>
                <label for="inputName" class="sr-only">Nombre</label>
                <input type="text" id="inputName" name="nombre" class="form-control mb-3" placeholder="&#xf007 &nbsp Nombre" autofocus>
                <label for="inputLastName" class="sr-only">Apellido</label>
                <input type="text" id="inputLastName" name="apellido" class="form-control mb-3" placeholder="&#xf007 &nbsp Apellido" autofocus>
                <label for="inputEmail" class="sr-only">Correo electronico</label>
                <input type="email" id="inputEmail" name="correo" class="form-control mb-3" placeholder="&#xf0e0 &nbsp Correo electronico" autofocus>
                <label for="inputPhone" class="sr-only">Edad</label>
                <input type="text" id="inputPhone" name="edad" class="form-control mb-3" placeholder="&#xf183 &nbsp Edad" autofocus>
                <label for="inputPhone" class="sr-only">Sexo</label>
                <select name="sexo" class="form-control mb-3" autofocus>
                    <option value="M" class="select">Masculino</option>
                    <option value="F">Femenino</option>
                </select>
                
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" name="password" class="form-control mb-2" placeholder="&#xf084 Contraseña">
                <div class="checkbox mb-3 mt-2">
                    <label>
                        <input type="checkbox" value="remember-me" onclick="comprobar(this);"> Acepto los terminos y condiciones de servicio del sitio
                    </label>
                </div>
                <p>¿Ya tienes una cuenta? <a href="~/Home/Login">Inicia sesión</a></p>
                <button class="btn btn-lg btn-primary btn-block" type="submit" disabled id="submit">Crear cuenta</button>
                <p class="mt-5 mb-3 text-muted">&copy; 2020</p>
            </form>
        </div>

    </div>
</body>


</html>
