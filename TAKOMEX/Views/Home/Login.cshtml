@model TAKOMEX.Models.ModelLogin

@{
    Layout = null;
}

@{
    if (Request.Cookies["Cookie"] != null)
    {
        Response.Redirect("Index");
    }
}

<!doctype html>
<html lang="es">

<head>
    <!-- No Tocar Nada de esto Porfa es el bootstrap-->
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <!-- Este es el css que se puede editar-->
    <link rel="stylesheet" href="~/Content/css/estilos.css">
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/login.css">
    <script src="https://kit.fontawesome.com/8aed773e18.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
    <script src="~/Content/javascript/login.js" charset="utf-8"></script>


    <title> Restaurante TAKOMEXS</title>
</head>

<body class="text-center">
    <div class="home">
        <img src="~/Content/imagenes/TAKOMEX (nav-bar).png" alt="" id="logo" onclick="location.href='indexprincipal.html';" value="Go to Home">
    </div>
    @if (ViewBag.Menssaje != null)
    {
        <p>@ViewBag.Menssaje</p>
    }
    <div class="box-1">
        <div class="box-2">
            <form class="form-signin" id="form-login" action="Verify" method="post">
                <h1 class="h3 mb-3 font-weight-normal">Inicia sesión</h1>
                <label for="inputEmail" class="sr-only">Correo electronico</label>
                <input type="email" id="inputEmail" name="cemail" class="form-control mb-3" placeholder="&#xf0e0 &nbsp Correo electronico" autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" name="password" class="form-control mb-2" placeholder="&#xf084 Contraseña">
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" value="remember-me"> Recordarme
                    </label>
                </div>
                <p>¿No tienes una cuenta? <a href="~/Home/Registro">Crea una</a></p>
                <button class="btn btn-lg btn-primary btn-block" type="submit" id="submit">Ingresar</button>
                <p class="mt-5 mb-3 text-muted">&copy; 2020</p>
            </form>
        </div>
    </div>
</body>


</html>
