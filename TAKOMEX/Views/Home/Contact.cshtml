@{
    ViewBag.Title = "Contact";
}

@{ Html.RenderAction("header"); }

<style>
    .header {
        color: #36A0FF;
        font-size: 27px;
        padding: 10px;
    }

    .bigicon {
        font-size: 35px;
        color: #36A0FF;
    }
</style>
    

<div class="container">
    <center>
        <div class="row">
            <div class="col-md-12 mt-5 mb-5">
                    @using (Html.BeginForm("GuardarMensaje", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <h2 class="text-center header">Contactanos</h2>
                        <div class="form-group">
                            <div class="col-md-8">
                                <input id="Asunto" name="Asunto" type="text" placeholder="Asunto..." class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8">
                                <textarea class="form-control" id="message" name="message" placeholder="Escribe tu mensaje..." rows="7"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
                            </div>
                        </div>

                    }
            </div>
        </div>
    </center>
</div>

@{ Html.RenderAction("footer"); }