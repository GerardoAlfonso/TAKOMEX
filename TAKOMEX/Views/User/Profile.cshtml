@model TAKOMEX.Models.Persona

@{
    Layout = null;
}
@{ Html.RenderAction("header"); }

@{
    String value = "";
    if (Request.Cookies["Cookie"] != null)
    {
        value = Request.Cookies["Cookie"].Value;
    }
    else
    {
        value = null;
        Response.Redirect("Access");
    }
    var item = Model;
}


<link rel="stylesheet" href="~/Content/css/profile.css">

<div class="container">
    <div class="row px-4">
        <div class="mx-auto">
            <!-- Profile widget -->
            <div class="bg-white shadow rounded overflow-hidden">
                <div class="px-4 pt-0 pb-4 cover">
                    <div class="media align-items-end profile-head">
                        <div class="profile mr-3"><img src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" alt="..." width="130" class="rounded mb-2 img-thumbnail"><a href="#" class="btn btn-outline-dark btn-sm btn-block">Editar perfil</a></div>
                        <div class="media-body mb-5 text-white">
                            <h4 class="mt-0 mb-0">@item.Nombre @item.Apellido</h4>
                            <p class="small mb-4"> <i class="fas fa-map-marker-alt mr-2"></i>San Salvador</p>
                        </div>
                    </div>
                </div>
                <div class="bg-light p-4 d-flex justify-content-end text-center">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">215</h5><small class="text-muted"> <i class="fas fa-image mr-1"></i>Compras</small>
                        </li>
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">4</h5><small class="text-muted"> <i class="fas fa-user mr-1"></i>Rango</small>
                        </li>
                        <li class="list-inline-item">
                            <h5 class="font-weight-bold mb-0 d-block">100</h5><small class="text-muted"> <i class="fas fa-user mr-1"></i>Puntos</small>
                        </li>
                    </ul>
                </div>
                <div class="py-4 px-4">
                    <table class="table">
                        <tr>
                            <td><label for="">Nombre</label></td>
                            <th><label for="">@item.Nombre</label></th>
                        </tr>
                        <tr>
                            <td><label for="">Apellido</label></td>
                            <th><label for="">@item.Apellido</label></th>
                        </tr>
                        <tr>
                            <td><label for="">Edad</label></td>
                            <th><label for="">@item.Edad</label></th>
                        </tr>
                        <tr>
                            <td><label for="">Correo</label></td>
                            <th><label for="">@item.Correo</label></th>
                        </tr>
                        <tr>
                            <td><label for="">Sexo</label></td>
                            <th><label for="">@item.Sexo</label></th>
                        </tr>
                    </table>
                </div>
                <div class="py-4 px-4">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h5 class="mb-0">Compras recientes</h5><a href="#" class="btn btn-link text-muted">Show all</a>
                    </div>
                    <div class="row mt-5">
                        <div class="col-lg-6 mb-2 pr-lg-1"><img src="https://images.unsplash.com/photo-1469594292607-7bd90f8d3ba4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="" class="img-fluid rounded shadow-sm"></div>
                        <div class="col-lg-6 mb-2 pl-lg-1"><img src="https://images.unsplash.com/photo-1493571716545-b559a19edd14?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="" class="img-fluid rounded shadow-sm"></div>
                        <div class="col-lg-6 pr-lg-1 mb-2"><img src="https://images.unsplash.com/photo-1453791052107-5c843da62d97?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" alt="" class="img-fluid rounded shadow-sm"></div>
                        <div class="col-lg-6 pl-lg-1"><img src="https://images.unsplash.com/photo-1475724017904-b712052c192a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="" class="img-fluid rounded shadow-sm"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@{ Html.RenderAction("footer"); }