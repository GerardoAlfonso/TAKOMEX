@model TAKOMEX.Models.Articulos

@{
    Layout = null;
}

@{ Html.RenderAction("header"); }

@{
    String value = "";
    if (Request.Cookies["Cookie"] != null)
    {
        value = Request.Cookies["Cookie"].Value;
    }
    else
    {
        value = null;
        Response.Redirect("Access");
    }
}



<link href="~/Content/css/carrito.css" rel="stylesheet" />

<div class="container mt-5 mb-5">
    <h4>Carrito de compras</h4>
    <div class="row align-items-start">
        <div class="d-flex flex-row">
            <div class="contenido-carrito">
                <table class="table">
                    <tr id="Producto">
                        <td >Producto</td>
                        <td>Precio</td>
                        <td>Cantidad</td>
                        <td>SubTotal</td>
                        <td></td>
                    </tr>
                    @if (Session["Productos"] == null)
                    {
                        <tr>
                            <td colspan="4">No hay productos para mostrar</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in ViewBag.Lista)
                        {
                            <tr >
                                <td>@item.Nombre</td>
                                <td>$@item.Precio</td>
                                <td>1</td>
                                <td>$@item.Precio</td>
                                <td>@Html.ActionLink("X", "Cesta", "User", new { id = item.idArticulo }, new { @class = "btn btn-secondary" })</td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
        <div class="card w">
            <div class="card-header">
                Procesar compra
            </div>
            <div class="card-body">
                <label for="">Restaurante</label>
                <br>
                <select name="" id="" class="w-100 form-control">
                    <option value="">Seleccione...</option>
                    <option value="">Benito juares</option>
                </select>
                <label for="" class="mt-2">Tipo de pago</label>
                <br>
                <select name="" id="" class="w-100 form-control mb-3">
                    <option value="">Seleccione...</option>
                    <option value="">Efectivo</option>
                    <option value="">Tarjeta</option>
                </select>
            </div>
            <div class="card-footer">
                <div class="row justify-content-between">
                    <div class="col-4">
                        SubTotal
                    </div>
                    <div class="col-4">
                        $
                        @if (@ViewBag.Total != null)
                        {
                            @ViewBag.Total
                        }
                        else
                        {
                            Write("--");
                        }
                    </div>
                </div>
            </div>
            <div class="container mt-2 mb-2">
                <div class="row justify-content-between">
                    <div class="col-4">
                        TOTAL
                    </div>
                    <div class="col-4">
                        $
                        @if (@ViewBag.Total != null)
                        {
                            @ViewBag.Total
                        }
                        else
                        {
                            Write("--");
                        }
                    </div>
                </div>
            </div>
            @Html.ActionLink("Procesar Pago", "ProcesarPago", "User",null, new { @class = "btn btn-primary" })
            <div class="row">
                <div class="col mt-2 mb-2" style="text-align: center;">
                    <a href="javascript:history.back()" class="btn btn-link btn-sm w-100">← Continúa Comprando</a>
                </div>
            </div>
        </div>
    </div>
</div>


@{ Html.RenderAction("footer"); }